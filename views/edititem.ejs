<%- include('header.ejs'); -%>
<%- include('nav.ejs'); -%>
    <div class="container mt-3">
     <h3 class="text-center">Cập nhật Item </h3>
     <% for(var i=0; i < data.length; i++){ %>
        <img src="data:image/png;base64,<%=data[i].itemimage%>" alt="Embedded Image"  width="70px">
     <form action="" method="post" enctype="multipart/form-data">
      <input type="hidden" name="id" value="<%=data[i].id%>">
         <label for="name">Tên</label>
         <input type="text" name="name" value="<%=data[i].name%>" class="form-control">
         <label  for="description">Description</label>
         <input type="text" name="description" value="<%=data[i].description%>" class="form-control">
         <div class="mb-3">
          <label class="form-label">Tấn công</label>
          <input type="text" name="atk_item" id="atk_item" value="<%=data[i].atk_item%>" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Máu</label>
            <input type="text" name="hp_item" id="hp_item" value="<%=data[i].hp_item%>" class="form-control" />
        </div>
         <label for="weapon_level">Level</label>
         <select name="weapon_level" id="weapon_level"  class="form-control">
          <option value="5">5</option>
          <option value="4">4</option>
         </select>
         <div class="mb-3">
            <label for="exampleFormControlFile1">thêm hình</label><br>
            <input type="file" name="itemimage" accept="image/*">
      </div>
         <input type="submit" value="Cập nhật" class="btn btn-primary mt-2"> <br>
         <a href="/item" style="text-decoration: none;">Quay lại?</a>
     </form>
     <% } %>
    </div>
    <%- include('footer.ejs'); -%>