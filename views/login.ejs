<%- include('header.ejs'); -%>
<style>
h1 {  
    text-align:center;  
    -webkit-text-stroke: 1px black;  
    color:red;  
}  
body{
    background-size: cover;  
    background-image: url(  
"https://genshin.global/wp-content/uploads/2022/07/kazuha-fischl-mona-xinyan-golden-apple-archipelago-wallpaper-genshin-1200x675.jpg");  
}
.container {  
    max-width: 300px;  
    padding: 17px;  
    position: absolute;  
    left: 28px;  
    top: 50px;  
    margin: 20px;  
    
}  
  

input[type=email],  
input[type=password] {  
    margin: 17px 0px;  
    border: 2px solid red;  
    width: 100%;  
    padding: 17px;  
}  
.button:hover {  
    transform: scale(1.2);  
    transition: transform 0.2s;  
}  
.link a{
    text-decoration: none;
    color: #F58840;
}
.link{
    padding-top: 10px;
    justify-content: center;
    display: flex;
    font-size: 30px;
}
.link a:hover{
    background-color: #F58840;
    color: #EAF6F6;
}
.button {  
    border: none;  
    cursor: pointer;  
    width: 100%;  
    background-color: #F58840;  
    color: #EAF6F6;  
    padding: 17px 17px;  
}  
    </style>  
  
    <div class="container">

   
    <div class="background-img">  
    <h1>Login Admin</h1>
        
    <form action="" method="POST">
        <input type="email" class="input" name="_email" id="user_email" placeholder="Enter email">
        <input type="password" class="input" name="_password" id="user_pass" placeholder="Enter password">
        <% if(typeof error !== 'undefined'){ %>
        <div class="err-msg"><%= error %></div><% } %>
        <input type="submit" class="button" value="Login">
        <div class="link"><a href="./signup"><span>Sign Up</span></a></div>
    </form>
    </div> 
</div>

