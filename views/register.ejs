<%- include('header.ejs'); -%>

<style>
    .container {  
        max-width: 300px;  
        position: absolute;  
        top: 50px;  
        margin: 20px; 
        justify-content: center;
 
    }  
    body{
        height: 700px;
        background-size: cover;  
        background-image: url(  
    "https://genshin.global/wp-content/uploads/2022/06/Kaedahara-Kazuha-official-art-desktop-wallpaper-genshin-1200x675.jpg");  
    }
    .button:hover {  
        transform: scale(1.2);  
        transition: transform 0.2s;  
    }  
    .link a{
        text-decoration: none;
        color: #F58840;
    }
    .link{
        padding-top: 10px;
        justify-content: center;
        display: flex;
        font-size: 30px;
    }
    .link a:hover{
        background-color: #F58840;
        color: #EAF6F6;
    }
    .button {  
        border: none;  
        cursor: pointer;  
        width: 100%;  
        background-color: #F58840;  
        color: #EAF6F6;  
        padding: 17px 17px;  
    }  
    input[type=email],  
    input[type=text],  
    input[type=tel],  
    input[type=password] {  
        margin: 17px 0px;  
        border: 2px solid red;  
        width: 100%;  
        padding: 17px;  
    } 
    h1 {  
        text-align:center;  
        -webkit-text-stroke: 1px black;  
        color:red;  
    }  
</style>
<div class="container">
    <h1>Sign Up</h1>
    <form action="" method="POST">
        <input type="text" class="input" name="_name" autocomplete="off" id="user_name" placeholder="Enter your name">
        <input type="email" class="input" name="_email" autocomplete="off" id="user_email" placeholder="Enter your email">
        <input type="tel" class="input" name="_phone" autocomplete="off" id="user_phone" placeholder="Enter your phone">
        <input type="password" class="input" name="_password" id="user_pass" placeholder="Enter new password">
        <% if(typeof msg != 'undefined'){ %>
        <div class="success-msg"><%= msg %></div><% }
        if(typeof error !== 'undefined'){ %>
        <div class="err-msg"><%= error %></div><% } %>
        <input type="submit" class="button" value="Sign Up">
        <div class="link"><a href="./login">Login</a></div>
    </form>
</div>
